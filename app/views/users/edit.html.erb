<% provide :title, I18n.t("users.edit.edit_user") %>
<% provide :button_text, I18n.t("users.edit.submit") %>
<h1><%= t ".update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.change"), Settings.servers.email, target: "_blank" %>
    </div>
  </div>
</div>
