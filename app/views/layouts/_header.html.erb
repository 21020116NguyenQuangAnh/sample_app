<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.home"), root_path %></li>
        <li><%= link_to t("layouts.help"), help_path %></li>
        <li><%= link_to t("layouts.english"), locale: :en %></li>
        <li><%= link_to t("layouts.vietnamese"), locale: :vi %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              <%= t "layouts.account" %>
              <b class="caret"></b>
            <% end %>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("layouts.profile"), current_user %></li>
              <li><%= link_to t("layouts.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("layouts.logout"), logout_path, data: { "turbo-method": :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
